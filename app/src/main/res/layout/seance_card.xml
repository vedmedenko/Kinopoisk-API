<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/seance_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/seance_card_padding"
        android:background="@drawable/touchable_background_white">

        <TextView
            android:id="@+id/text_cinema_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_cinema_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_cinema_name"
            android:layout_alignLeft="@id/text_cinema_name"
            android:layout_alignStart="@id/text_cinema_name"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black_87pc"/>

        <TextView
            android:id="@+id/text_seances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_cinema_address"
            android:layout_alignLeft="@id/text_cinema_address"
            android:layout_alignStart="@id/text_cinema_address"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black_87pc"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>